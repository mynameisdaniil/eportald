%% vim: ft=erlang
{erl_opts, [debug_info]}.

{deps, [
        {sync, "0.4.1"},
        {libsecp256k1, "0.1.15", {pkg, libsecp256k1_nash_fork}},
        {hkdf, {git, "https://github.com/schnef/hkdf.git", {branch, "master"}}},
        {rlp, {}},
        {enr, {}},
        {keccak, {}},
        {gproc, "1.0.0"}
       ]}.

{plugins, [rebar_mix, rebar3_hex, rebar3_ex_doc]}.

{shell, [
         {config, "config/sys.config"},
         {apps, [discv5, gproc]}
]}.

{overrides, [
             {override, fs, [
                             {port_env, [
                                         {"darwin", "LDFLAGS", "-framework CoreFoundation -framework CoreServices"},
                                         {"darwin", "CC", "xcrun -r clang"},
                                         {"darwin", "CFLAGS", "-Wno-deprecated-declarations"},
                                         {"freebsd", "LDFLAGS", ""},
                                         {"freebsd", "CC", "cc"},
                                         {"freebsd", "CFLAGS", ""}
                                        ]}
                            ]}
            ]}.

{hex, [{doc, ex_doc}]}.

{ex_doc, [
     {extras, ["README.md", "LICENSE.md"]},
     {main, "README.md"},
     {source_url, "https://github.com/eportald/eportald/tree/master/discv5"},
     {homepage_url, "https://eportald.org/"}
]}.
